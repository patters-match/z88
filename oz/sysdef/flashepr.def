; ==========================================================================================
; INTEL Flash Memory constants:

DEFC FE_INTEL_MFCD = $89    ; INTEL Manufacturer code

; Unique Flash Memory ID, 28Fxxx series (combination of Manufacturer Code and Device Code):
; These 2nd generation Flash chips require 12V for programming and erasure (z88 slot 3)
DEFC FE_I28F020 = $89BD     ; 256Kb memory (4 x 64K blocks / 16 x 16K banks)
DEFC FE_I28F004S5 = $89A7   ; 512Kb memory (8 x 64K blocks / 32 x 16K banks)
DEFC FE_I28F008SA = $89A2   ; 1Mb memory (16 x 64K blocks / 64 x 16K banks)
DEFC FE_I28F008S5 = $89A6   ; 1Mb memory (16 x 64K blocks / 64 x 16K banks)
DEFC FE_I28F016S5 = $89AA   ; 2Mb memory (32 x 64K blocks / 128 x 16K banks) - low 1Mb available to Z88
; ==========================================================================================


; ==========================================================================================
; Flash Eprom Commands for 28Fxxxx series (equal to all chips, regardless of manufacturer)

DEFC FE_RST = $FF           ; reset chip in read array mode
DEFC FE_IID = $90           ; get INTELligent identification code (manufacturer and device)
DEFC FE_RSR = $70           ; read status register
DEFC FE_CSR = $50           ; clear status register
DEFC FE_ERA = $20           ; erase block (64Kb) command
DEFC FE_CON = $D0           ; confirm erasure
DEFC FE_SUS = $B0           ; suspend erasure
DEFC FE_RES = $D0           ; resume erasure
DEFC FE_WRI = $40           ; byte write command
DEFC FE_ALW = $10           ; alternate byte write command
; ==========================================================================================


; ==========================================================================================
; AMD Flash Memory constants:

DEFC FE_AMD_MFCD = $01    ; AMD Manufacturer code

; Unique Flash Memory ID, 29Fxxx series (combination of Manufacturer Code and Device Code):
; These 3rd generation Flash chips only require 5V for programming and erasure (all z88 slots!)
DEFC FE_AM29F010B = $0120   ; 128Kb memory (2 x 64K blocks / 8 x 16K banks)
DEFC FE_AM29F040B = $01A4   ; 512Kb memory (8 x 64K blocks / 32 x 16K banks)
DEFC FE_AM29F080B = $01D5   ; 1Mb memory (16 x 64K blocks / 64 x 16K banks)
; ==========================================================================================


; ==========================================================================================
; Flash Eprom Error Return codes

DEFC RC_VPL = $70           ; Vpp Low Error
DEFC RC_BWR = $71           ; Byte Write Error
DEFC RC_BER = $72           ; Block Erasure Error
DEFC RC_BES = $73           ; block erasure suspended
DEFC RC_NFE = $80           ; not a flash eprom
DEFC RC_NOZ = $81           ; not an oz formatted eprom
; ==========================================================================================


