defc    NBUFSIZE        = 240

defvars FILER_SAFE_WS_START
     f_Confirm               ds.b    1
     f_Flags1                ds.b    1
     f_OutLnCnt              ds.b    1
     f_ParseFlags            ds.b    1
     f_nSrcSegments          ds.b    1
     f_SourceHandle          ds.w    1
     f_DestHandle            ds.w    1
                                     ; above variables get cleared every time a new command is executed
     f_ActiveWd              ds.b    1
     f_SelectorPos           ds.b    1
     f_SelectedCmd           ds.b    1
     f_NumDirEntries         ds.b    1       ; visible entries
     f_Flags2                ds.b    1
     f_SavedCmdPos           ds.b    1
     f_SourceType            ds.b    1
     f_NumSelected           ds.b    1
     f_CmdFlags              ds.b    1
     f_TopDirEntry           ds.w    1
     f_MemPool               ds.w    1
     f_WildcardHandle        ds.w    1
     f_SourceNameEnd         ds.w    1
     f_DestNameEnd           ds.w    1
     f_SelectedList          ds.w    1
     f_unk1ded               ds.b    1
     f_filecardslot          ds.b    1

     vf_Statusbyte           ds.b    1    ; status flags
     vf_SC                   ds.b    1    ; Horisontal Start Cursor      (1 byte)
     vf_CI                   ds.b    1    ; Horisontal Cursor Increment  (1 byte)
     vf_CX                   ds.b    1    ; Horisontal Cursor Movement   (1 byte)
     vf_CY                   ds.b    1    ; Vertical Cursor Movement     (1 byte)
     vf_BotAddr              ds.w    1
     vf_TopAddr              ds.w    1
     vf_BaseAddr             ds.w    1
     vf_fptr                 ds.l    1    ; current file pointer
     vf_fsize                ds.p    1    ; size of file

     f_StrBuffer             ds.b    17
     f_MatchString           ds.b    17
     f_SourceName            ds.b    NBUFSIZE
     vf_EditBuffer
     f_DestName              ds.b    NBUFSIZE
enddef

; ViewFile Statusbyte bit mnemonics:
DEFC ViewEdit = 0  ;  BIT 0: View/Edit memory flag.
DEFC HexAscii = 1  ;  BIT 1: HEX/ASCII cursor flag.
