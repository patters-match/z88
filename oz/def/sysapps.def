IF !__SYSAPPS_DEF__
define __SYSAPPS_DEF__

; ----------------------------------------------------------------------------------------------
; Application Bank location
IF OZ_SLOT1
        defc OZBANK_INDEX       = $7C & $3F     ; Bank of Index popdown entry
        defc OZBANK_DIARY       = $77 & $3F     ; Bank of Diary application entry
        defc OZBANK_PIPEDREAM   = $78 & $3F     ; Bank of Pipedream application entry
        defc OZBANK_BBCBASIC    = $76 & $3F     ; Bank of BBC BASIC application entry
        defc OZBANK_CALCULATOR  = $7A & $3F     ; Bank of Calculator popdown entry
        defc OZBANK_CALENDAR    = $77 & $3F     ; Bank of Calendar popdown entry
        defc OZBANK_CLOCK       = $77 & $3F     ; Bank of Clock popdown entry
        defc OZBANK_ALARM       = $77 & $3F     ; Bank of Alarm popdown entry
        defc OZBANK_FILER       = $7C & $3F     ; Bank of Filer popdown entry
        defc OZBANK_PRINTERED   = $7A & $3F     ; Bank of PrinterEd application entry
        defc OZBANK_PANEL       = $7A & $3F     ; Bank of Panel popdown entry
        defc OZBANK_TERMINAL    = $7A & $3F     ; Bank of Terminal application entry
        defc OZBANK_IMPEXPORT   = $77 & $3F     ; Bank of Imp/Export popdown entry
        defc OZBANK_EAZYLINK    = $74 & $3F     ; Bank of EazyLink popdown entry
        defc OZBANK_FLASHSTORE  = $75 & $3F     ; Bank of FlashStore popdown entry
ELSE
        defc OZBANK_INDEX       = $02           ; Bank of Index popdown entry
        defc OZBANK_DIARY       = $04           ; Bank of Diary application entry
        defc OZBANK_PIPEDREAM   = $05           ; Bank of Pipedream application entry
        defc OZBANK_BBCBASIC    = $09           ; Bank of BBC BASIC application entry
        defc OZBANK_CALCULATOR  = $07           ; Bank of Calculator popdown entry
        defc OZBANK_CALENDAR    = $04           ; Bank of Calendar popdown entry
        defc OZBANK_CLOCK       = $04           ; Bank of Clock popdown entry
        defc OZBANK_ALARM       = $04           ; Bank of Alarm popdown entry
        defc OZBANK_FILER       = $02           ; Bank of Filer popdown entry
        defc OZBANK_PRINTERED   = $07           ; Bank of PrinterEd application entry
        defc OZBANK_PANEL       = $07           ; Bank of Panel popdown entry
        defc OZBANK_TERMINAL    = $07           ; Bank of Terminal application entry
        defc OZBANK_IMPEXPORT   = $04           ; Bank of Imp/Export popdown entry
        defc OZBANK_EAZYLINK    = $0A           ; Bank of EazyLink popdown entry
        defc OZBANK_FLASHSTORE  = $0B           ; Bank of FlashStore popdown entry
ENDIF
; ----------------------------------------------------------------------------------------------


; ----------------------------------------------------------------------------------------------
; Application code start
defc    ORG_INDEX          = $C000              ; Address entry of Index popdown (segment 3)
defc    ORG_DIARY          = $C000              ; Address entry of Diary application (segment 3)
defc    ORG_PIPEDREAM      = $8000              ; Address entry of PipeDream application (segment 2)
defc    ORG_BBCBASIC       = $D200              ; Address entry of BBC BASIC application (segment 3)
defc    ORG_CALCULATOR     = $D600              ; Address entry of Calculator popdown (segment 3)

; ORG_CALENDAR: Calendar entry point (in segment 3) is based on compilation (please refer to auto-generated "/oz/apps/clock/clcalalm.def")
; ORG_CLOCK: Clock entry point (in segment 3) is based on compilation (please refer to auto-generated "/oz/apps/clock/clcalalm.def")
; ORG_ALARM: Alarm entry point (in segment 3) is based on compilation (please refer to auto-generated "/oz/apps/clock/clcalalm.def")

defc    ORG_FILER          = $E800              ; Address entry of Filer popdown (segment 3)
defc    ORG_PRINTERED      = $C000              ; Address entry of PrinterEd application (segment 3)
defc    ORG_PANEL          = ORG_PRINTERED+10   ; Address entry of Panel popdown (segment 3)
defc    ORG_TERMINAL       = $D400              ; Address entry of Terminal application (segment 3)
defc    ORG_IMPEXPORT      = $FAB1              ; Address entry of Imp/Export popdown (segment 3)
defc    ORG_EAZYLINK       = $8000              ; Address entry of EazyLink popdown (segment 3)
defc    ORG_FLASHSTORE     = $C000              ; Address entry of FlashStore popdown (segment 3)
; ----------------------------------------------------------------------------------------------


; ----------------------------------------------------------------------------------------------
; Application workspace
defc    INDEX_UNSAFE_WS         = $28
defc    INDEX_UNSAFE_WS_START   = $1FFE-INDEX_UNSAFE_WS

defc    FILER_UNSAFE_WS         = $230
defc    FILER_UNSAFE_WS_START   = $1FFE-FILER_UNSAFE_WS
; ----------------------------------------------------------------------------------------------


ENDIF

