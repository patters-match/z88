; Card header

	CH_TAG		=	$3FFE						; card header tag
		CT_ROM	=	"OZ"						; application ROM
		CT_EPR	=	"oz"						; storage EPROM
		CT_RAM	=	$A55A						; RAM memory card (at $0000)
	
	CH_SUB		=	$3FFD						; card subtype
		CB_APL	=	0							; application card subtype
		CB_OS1	=	'Z'							; operating system in slot 1 subtype
		CB_EP1	=	$7E							; UVEPROM subtype 1 (32K)
		CB_EP2	=	$7C							; UVEPROM subtype 2 (128K or more)
				
	CH_SIZ		=	$3FFC						; size of card in 16K banks
		CZ_32	=	2							; 32K
		CZ_128	=	8							; 128K
		CZ_256	=	16							; 256K
		CZ_512	=	32							; 512K
		CZ_1M	=	64							; 1024K
		
	CH_ID		=	$3FF8						; 24 bits unique ID for application card
												; 32 bits random ID for storage card

	CH_EXT		=	$3FFB						; external ID for application card
		CX_APL	=	$80							; external application ID
		CX_OS	=	$81							; operating system
		
