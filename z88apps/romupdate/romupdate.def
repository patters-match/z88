defc banksize = 16384

if POPDOWN
     defc RAM_pages = 17408/256         ; total RAM DOR pages, 17K bytes contigous memory from upper 8K segment 0 ($2000 onwards)
     defc vararea = $2000
endif

if BBCBASIC
     defc vararea = $4000               ; The BBC BASIC version uses the continous RAM from segment 1 upwards ($4000 onwards)
endif

DEFVARS vararea
{
     buffer             ds.b banksize            ; buffer to load a complete 16K bank from file
     dorcpy             ds.b 64                  ; DOR buffer (used for patching to bank in for updated App card)
     bankfilename       ds.b 128                 ; filename of bank file to be patched to card (fetched from romupdate.cfg)
     bankfilecrc        ds.l 1                   ; CRC of bank file (fetched from from romupdate.cfg)
     filename           ds.b 128                 ; generic filename buffer
     presvdbanks        ds.b 4                   ; 4 byte array of bank numbers that are preserved as :RAM.-/bank.<bank number>
     presvdbankcrcs     ds.l 4                   ; array of CRC's for preserved banks (index matches preserved bank array)
}