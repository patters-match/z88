    <postInstallationActionList>
        <renameFile>
            <destination>${installdir}/libQtCore.so.4</destination>
            <origin>${installdir}/libQtCore.so.4.8.1</origin>
        </renameFile>
        <renameFile>
            <destination>${installdir}/libQtGui.so.4</destination>
            <origin>${installdir}/libQtGui.so.4.8.1</origin>
        </renameFile>
        <renameFile>
            <destination>${installdir}/libstdc++.so.6</destination>
            <origin>${installdir}/libstdc++.so.6.0.16</origin>
        </renameFile>
        <renameFile>
            <destination>${installdir}/libc.so.6</destination>
            <origin>${installdir}/libc-2.15.so</origin>
        </renameFile>
        <renameFile>
            <destination>${installdir}/libQtDBus.so.4</destination>
            <origin>${installdir}/libQtDBus.so.4.8.1</origin>
        </renameFile>
        <renameFile>
            <destination>${installdir}/libQtXml.so.4</destination>
            <origin>${installdir}/libQtXml.so.4.8.1</origin>
        </renameFile>
        <renameFile>
            <destination>${installdir}/libm.so.6</destination>
            <origin>${installdir}/libm-2.15.so</origin>
        </renameFile>
        <renameFile>
            <destination>${installdir}/libpthread.so.0</destination>
            <origin>${installdir}/libpthread-2.15.so</origin>
        </renameFile>
        <renameFile>
            <destination>${installdir}/librt.so.1</destination>
            <origin>${installdir}/librt-2.15.so</origin>
        </renameFile>
        <actionGroup>
            <actionList>
                <throwError text="Unable to add &quot;${system_username}&quot; to &quot;dialout&quot; group; please make sure gksu/kdesu is in path">
                    <ruleList>
                        <programTest condition="is_not_in_path" name="gksu"/>
                        <programTest condition="is_not_in_path" name="kdesu"/>
                    </ruleList>
                </throwError>
                <runProgram program="gksu" programArguments="&quot;usermod -a -G dialout ${system_username}&quot;">
                    <ruleList>
                        <programTest condition="is_in_path" name="gksu"/>
                    </ruleList>
                </runProgram>
                <runProgram program="kdesu" programArguments="-c &quot;usermod -a -G dialout ${system_username}&quot;">
                    <ruleList>
                        <programTest condition="is_not_in_path" name="gksu"/>
                        <programTest condition="is_in_path" name="kdesu"/>
                    </ruleList>
                </runProgram>
            </actionList>
            <ruleList>
                <isFalse value="${installer_is_root_install}"/>
            </ruleList>
        </actionGroup>
    </postInstallationActionList>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <vendor>cambridgez88.jira.com</vendor>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <platform>deb</platform>
        </platformOptions>
        <platformOptions>
            <platform>linux</platform>
        </platformOptions>
        <platformOptions>
            <platform>rpm</platform>
        </platformOptions>
    </platformOptionsList>
